
[alias]
	hist = log --pretty=oneline -n 20 --graph --abbrev-commit
	st = status -s
	go = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"
	tags = tag -l
	branches = branch -a 
	remotes = remote -v
	ammend = commit --amend

[apply]
	whitespace = fix

[core]
	excludesfile = ~/.gitignore, .gitignore
	attributesfile = ~/.gitattributes
	editor = vi
[color]
	ui = auto

[color "branch"]
	current = blue reverse
	local = blue
	remote = green

[color "diff"]
	meta = blue bold
	frag = magenta bold
	old = red
	new = green

[color "status"]
	added = blue
	changed = green
	untracked = cyan

[diff]
	renames = copies

[diff "bin"]
	textconv = hexdump -v -C

[help]
	autocorrect = 1

[merge]
	log = true

[push]
	default = matching

# URL shorthands

[url "git@github.com:"]

	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"

[url "git://github.com/"]

	insteadOf = "github:"

[url "git@gist.github.com:"]

	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]

	insteadOf = "gist:"
